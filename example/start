#!/bin/sh -e

DIRNAME="$(readlink -f $(dirname $0))"
SANDBOXDIR="${DIRNAME}/sandbox"
HAKO_RUN="$(dirname ${DIRNAME})/hako-run"

# Empty directories can't be checked into git
mkdir -p ${SANDBOXDIR}/tmp ${SANDBOXDIR}/.hako

exec $HAKO_RUN \
	--pid-file /tmp/hako.pid \
	--user ${SUDO_UID:-$(id -u)} \
	--group ${SUDO_GID:-$(id -g)} \
	--lock-privs \
	--read-only \
	${SANDBOXDIR} \
	-- "$@"
